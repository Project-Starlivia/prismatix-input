{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "rootDir": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["src/**/__tests__", "src/**/*.test.ts", "src/**/*.test.js", "generate-exports.ts"]
}
