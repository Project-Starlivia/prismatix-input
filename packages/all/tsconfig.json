{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "rootDir": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@starlivia/prismatix-input-core": ["../core/dist/index.d.ts"],
      "@starlivia/prismatix-input-core/*": ["../core/dist/*"],
      "@starlivia/prismatix-input-mitt": ["../mitt/dist/index.d.ts"],
      "@starlivia/prismatix-input-mitt/*": ["../mitt/dist/*"],
      "@starlivia/prismatix-input-rxjs": ["../rxjs/dist/index.d.ts"],
      "@starlivia/prismatix-input-rxjs/*": ["../rxjs/dist/*"]
    }
  },
  "include": ["src"],
  "exclude": ["test"]
}
